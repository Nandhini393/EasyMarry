<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="15dp"
    android:elevation="3dp"
    android:layout_height="wrap_content">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search.."
            android:id="@+id/textView5"
            android:layout_marginRight="100dp"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/edit_single"
            android:layout_gravity="center" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:id="@+id/filter_search"
            android:src="@drawable/filter_search"
       />


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/filter_tick"
        android:gravity="center"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/filter_tick"
        android:layout_gravity="center" />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/filter_cancel"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:src="@drawable/filter_cross"
        android:layout_gravity="center" />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/edit_single">

    </View>
    <ListView
        android:id="@+id/drawer_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:divider="#acbbca"
      android:layout_margin="5dp"
        android:dividerHeight="0.5dp"
        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft">

    </ListView>

</LinearLayout>