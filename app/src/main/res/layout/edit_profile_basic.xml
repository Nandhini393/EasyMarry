<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_list_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gey_bck"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_green"

            android:elevation="4dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">


                <ImageView
                    android:id="@+id/img_ed_back"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center"
                    android:layout_weight="0.3"
                    android:src="@drawable/back_arrow" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.4"
                    android:gravity="center"
                    android:text="Edit Profile"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="left"
                    android:layout_weight="0.3" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="50dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="20dp"
                        android:text="Basic details"

                        android:textColor="@color/app_orange"
                        android:textSize="15dp" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:hint="Name"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                            android:textCursorDrawable="@drawable/cursor_color" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/right10"
                            android:hint="Age"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/calen10"
                            android:editable="false"
                            android:hint="Date of birth"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_height"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/right10"
                            android:hint="Height"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/right10"
                            android:hint="Weight"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/ll_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp"
                            android:text="Gender"
                            android:textColor="@color/edit_hint" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="15dp"
                                android:orientation="vertical">

                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/radio_male"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:background="@drawable/radio_selector"
                                        android:button="@android:color/transparent"
                                        android:checked="true"
                                        android:drawablePadding="5dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:paddingLeft="5dp"
                                        android:text="Male" />

                                    <RadioButton
                                        android:id="@+id/radio_female"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginLeft="20dp"
                                        android:background="@drawable/radio_selector"
                                        android:button="@android:color/transparent"
                                        android:checked="false"
                                        android:drawablePadding="5dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:paddingLeft="5dp"
                                        android:text=" Female" />

                                </RadioGroup>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_marital_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_marital_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/right10"
                            android:hint="Marital Status"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_part_child"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/txt_child"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="20dp"
                                android:text="Do you have children?"
                                android:textColor="@color/edit_hint" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_child"
                                android:layout_marginRight="20dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginTop="15dp"
                                    android:orientation="vertical">

                                    <RadioGroup
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <RadioButton
                                            android:id="@+id/radio_yes"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:background="@drawable/radio_selector"
                                            android:button="@android:color/transparent"
                                            android:checked="false"
                                            android:drawablePadding="5dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:paddingLeft="5dp"
                                            android:text="Yes"
                                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

                                        <RadioButton
                                            android:id="@+id/radio_no"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_marginLeft="30dp"
                                            android:background="@drawable/radio_selector"
                                            android:button="@android:color/transparent"
                                            android:checked="true"
                                            android:drawablePadding="5dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:paddingLeft="5dp"
                                            android:text="No"
                                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                                    </RadioGroup>

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_child"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:textColorHint="@color/edit_hint"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                            <EditText
                                android:id="@+id/et_no_of_children"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edit_single"
                                android:hint="No.of Children"
                                android:inputType="number"
                                android:paddingBottom="8dp"
                                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                android:visibility="gone"

                                />

                        </android.support.design.widget.TextInputLayout>


                    </RelativeLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_mother_tongue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_mothertongue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/right10"
                            android:hint="Mother Tongue"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_phy_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_phy_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/right10"
                            android:hint="Physical Status"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_body_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_body_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/right10"
                            android:hint="Body type"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_prof_create"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_prof_create"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/right10"
                            android:hint="Profile created for"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Eating habits"
                        android:textColor="@color/edit_hint" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <RadioGroup
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <RadioButton

                                            android:id="@+id/radio_eating_all"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:background="@drawable/radio_selector"
                                            android:button="@android:color/transparent"
                                            android:checked="true"
                                            android:drawablePadding="5dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:paddingLeft="5dp"
                                            android:text="All" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:orientation="horizontal">

                                        <RadioButton

                                            android:id="@+id/radio_eating_nonveg"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:background="@drawable/radio_selector"
                                            android:button="@android:color/transparent"
                                            android:checked="false"
                                            android:drawablePadding="5dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="5dp"
                                            android:text="Non-Vegetarian" />
                                    </LinearLayout>
                                </RadioGroup>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <RadioGroup
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <RadioButton

                                            android:id="@+id/radio_eating_veg"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:background="@drawable/radio_selector"
                                            android:button="@android:color/transparent"
                                            android:checked="false"
                                            android:drawablePadding="5dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:paddingLeft="5dp"
                                            android:text="Vegetarian" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:orientation="horizontal">

                                        <RadioButton

                                            android:id="@+id/radio_eating_egg"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:background="@drawable/radio_selector"
                                            android:button="@android:color/transparent"
                                            android:checked="false"
                                            android:drawablePadding="5dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="5dp"
                                            android:text="Eggetarian" />
                                    </LinearLayout>
                                </RadioGroup>

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Drinking habits"
                        android:textColor="@color/edit_hint" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/radio_drink_yes"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/radio_selector"
                                    android:button="@android:color/transparent"
                                    android:checked="false"
                                    android:drawablePadding="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:text="Yes" />

                                <RadioButton

                                    android:id="@+id/radio_drink_no"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:background="@drawable/radio_selector"
                                    android:button="@android:color/transparent"
                                    android:checked="true"
                                    android:drawablePadding="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:text="No" />

                                <RadioButton

                                    android:id="@+id/radio_drink_social"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:background="@drawable/radio_selector"
                                    android:button="@android:color/transparent"
                                    android:checked="false"
                                    android:drawablePadding="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:text="Social" />
                            </RadioGroup>

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Smoking habits"
                        android:textColor="@color/edit_hint" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_smoke_yes"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:checked="false"
                                android:drawablePadding="5dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:text="Yes" />


                            <RadioButton

                                android:id="@+id/radio_smoke_no"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:checked="true"
                                android:drawablePadding="5dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:text="No" />

                            <RadioButton

                                android:id="@+id/radio_smoke_social"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/radio_selector"
                                android:button="@android:color/transparent"
                                android:checked="false"
                                android:drawablePadding="5dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:text="Social" />
                        </RadioGroup>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_basic_det_save"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@color/app_orange"
                        android:text="save"
                        android:textAllCaps="true"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                        android:textColor="@color/white" />

                </LinearLayout>
            </RelativeLayout>

        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_drawer"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:background="#ededed"
        android:fitsSystemWindows="true"
        android:orientation="vertical">
        <!-- android:layout_gravity="right"-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_list_user"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/et_search_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/orange_edit_single"
                    android:hint="Search"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                    android:textColorHint="@color/edit_hint"
                    android:textCursorDrawable="@drawable/cursor_color" />

                <ImageView
                    android:id="@+id/filter_search1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/filter_search" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_list_partner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:visibility="gone">


                <EditText
                    android:id="@+id/et_filter_search2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="100dp"
                    android:background="@drawable/orange_edit_single"
                    android:hint="Search"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/filter_search"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="90dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/filter_search" />


                <ImageView
                    android:id="@+id/filter_tick2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:src="@drawable/filter_tick" />

                <ImageView
                    android:id="@+id/filter_cancel2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:src="@drawable/filter_cross" />
            </RelativeLayout>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/edit_single">

        </View>

        <ListView
            android:id="@+id/drawer_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:divider="#acbbca"
            android:dividerHeight="0.5dp"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft">

        </ListView>

        <TextView
            android:id="@+id/txt_draw_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No response from server"
            android:textColor="#FF0000" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
