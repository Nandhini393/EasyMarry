<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/homelogo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="Enter your mobile number and verify" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/edit_single"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/ed_countryCode"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                    android:background="@null"
                    android:hint="(+91)" />
            <Spinner
                android:id="@+id/spin_phone_code"
                android:layout_width="110dp"
                android:layout_height="wrap_content"

                android:spinnerMode="dropdown">

            </Spinner>

</LinearLayout>

            <EditText
                android:id="@+id/et_phone_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_single"
                android:inputType="phone"
                android:hint="Phone"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />



        </LinearLayout>

        <TextView
            android:id="@+id/txt_error_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_layout_profile_for"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Small Text"
            android:visibility="gone"
            android:textSize="11dp"
            />
        <Button
            android:id="@+id/btn_verify"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:background="@color/app_orange"
            android:text="verify"
            android:textAllCaps="true"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>