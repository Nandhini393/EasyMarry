<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_list_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <!-- Your normal content view -->

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gey_bck"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="@drawable/bann" />
                </RelativeLayout>


                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/back_arrow" />


            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/app_green"
                android:gravity="center"
                android:text="Sign Up Free"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Take your first registration step"
                        android:textColor="@color/black" />

                    <!--     <LinearLayout
                             android:id="@+id/ll_facebook"
                             android:layout_width="match_parent"
                             android:layout_height="45dp"
                             android:layout_marginTop="20dp"
                             android:gravity="center"
                             android:orientation="horizontal">

                             <ImageView
                                 android:id="@+id/img_fb_login"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:src="@drawable/facebuk" />


                         </LinearLayout>


                         <TextView
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="15dp"
                             android:gravity="center"
                             android:text="( or ) "
                             android:textColor="@color/black" />-->


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_profile_for"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp"
                            android:editable="false"
                            android:textColorHint="@color/edit_hint"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                            <EditText
                                android:id="@+id/et_profile_for"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edit_single"
                                android:cursorVisible="false"
                                android:drawableRight="@drawable/right10"
                                android:hint="Matrimony profile for*"
                                android:inputType="textPersonName"
                                android:paddingBottom="8dp"
                                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                        </android.support.design.widget.TextInputLayout>


                        <TextView
                            android:id="@+id/txt_error_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/input_layout_profile_for"
                            android:layout_gravity="right"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:text="Small Text"
                            android:textSize="11dp"
                            android:visibility="gone" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_layout_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp"
                            android:textColorHint="@color/edit_hint"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                            <EditText
                                android:id="@+id/et_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edit_single"
                                android:hint="Name*"
                                android:inputType="textCapSentences"
                                android:paddingBottom="8dp"
                                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                android:textCursorDrawable="@drawable/cursor_color" />
                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            android:id="@+id/txt_error_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/input_layout_name"
                            android:layout_gravity="right"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:text="Small Text"
                            android:textSize="11dp"
                            android:visibility="gone" />

                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Gender*"
                        android:textColor="@color/edit_hint" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"

                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/radio_male"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/radio_selector"
                                    android:button="@android:color/transparent"
                                    android:checked="true"
                                    android:drawablePadding="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:text="Male" />

                                <RadioButton
                                    android:id="@+id/radio_female"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="30dp"
                                    android:background="@drawable/radio_selector"
                                    android:button="@android:color/transparent"
                                    android:checked="false"
                                    android:drawablePadding="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:text="Female" />
                            </RadioGroup>

                        </LinearLayout>

                    </LinearLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/calen10"
                            android:editable="false"
                            android:hint="Date of birth*"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/txt_error_dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Small Text"
                        android:textSize="11dp"
                        android:visibility="gone" />

                    <!-- <android.support.design.widget.TextInputLayout
                         android:id="@+id/input_layout_religion"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="20dp"
                         android:layout_marginRight="20dp"
                         android:layout_marginTop="20dp"
                         android:textColorHint="@color/edit_hint"
                         app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                         <EditText
                             android:id="@+id/et_religion"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:background="@drawable/edit_single"
                             android:drawableRight="@drawable/right10"
                             android:hint="Religion"

                             android:inputType="textPersonName"
                             android:paddingBottom="8dp"
                             android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                     </android.support.design.widget.TextInputLayout>-->

                    <!-- <android.support.design.widget.TextInputLayout
                         android:id="@+id/input_layout_mother_tongue"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="20dp"
                         android:layout_marginRight="20dp"
                         android:layout_marginTop="20dp"
                         android:textColorHint="@color/edit_hint"
                         app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                         <EditText
                             android:id="@+id/et_mother_tongue"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:background="@drawable/edit_single"
                             android:drawableRight="@drawable/right10"
                             android:hint="Mother tongue"

                             android:inputType="textPersonName"
                             android:paddingBottom="8dp"
                             android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                     </android.support.design.widget.TextInputLayout>-->

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:hint="E-mail*"
                            android:inputType="textPersonName"

                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                            android:textCursorDrawable="@drawable/cursor_color" />


                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/txt_error_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Small Text"
                        android:textSize="11dp"
                        android:visibility="gone" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:fontFamily="sans-serif"
                            android:hint="Password*"
                            android:imeOptions="actionDone"

                            android:inputType="textPassword"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                            android:textCursorDrawable="@drawable/cursor_color" />


                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/txt_error_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Small Text"
                        android:textSize="11dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linear1"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <CheckBox
                                android:id="@+id/chk_remember"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/black_checkbox_selector"
                                android:checked="false"
                                android:gravity="center"
                                android:text="By clicking continue button you accept"
                                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                android:textColor="@color/black" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txt_forget_pwd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="our"
                                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                    android:textColor="@color/black" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_terms"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="@string/terms"
                                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                        android:textColor="@color/black" />

                                </LinearLayout>

                            </LinearLayout>

                            <Button
                                android:id="@+id/btn_submit"
                                android:layout_width="150dp"
                                android:layout_height="40dp"
                                android:layout_marginBottom="50dp"
                                android:layout_marginTop="20dp"
                                android:background="@color/app_orange"
                                android:text="submit"
                                android:textAllCaps="true"
                                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Your drawer view. This can be any view, LinearLayout
         is just an example. As we have set fitSystemWindows=true
         this will be displayed under the status bar. -->

    <LinearLayout
        android:id="@+id/list_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:background="#ededed"
        android:fitsSystemWindows="true"
        android:orientation="vertical">
        <!-- android:layout_gravity="right"-->

        <!-- android:layout_gravity="right"-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/et_search_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/orange_edit_single"
                android:hint="Search"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColorHint="@color/edit_hint"
                android:textCursorDrawable="@drawable/cursor_color" />

            <ImageView
                android:id="@+id/filter_search"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/filter_search" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c0c0c0"></View>

        <ListView
            android:id="@+id/drawer_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:divider="#acbbca"
            android:dividerHeight="0.5dp"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft">

        </ListView>

        <TextView
            android:id="@+id/txt_draw_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No response from server"
            android:textColor="#FF0000" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>