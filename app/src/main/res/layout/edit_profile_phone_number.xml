<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_list_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gey_bck"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_green"

        android:elevation="4dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">


            <ImageView
                android:id="@+id/img_ed_back"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="right|center"
                android:layout_weight="0.3"
                android:src="@drawable/back_arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.4"
                android:gravity="center"
                android:text="Edit Profile"
                android:textSize="16dp"
                android:textColor="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:layout_weight="0.3" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical"
                android:paddingBottom="50dp">

                <TextView
                    android:id="@+id/txt_contact_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="20dp"
                    android:text="Contact Details Of Arjun(EM40004)"
                    android:textColor="@color/app_orange"
                    android:textSize="15dp" />


                 <LinearLayout
                     android:layout_width="match_parent"
                     android:orientation="horizontal"
                     android:layout_marginLeft="20dp"
                     android:layout_marginRight="20dp"
                     android:layout_marginTop="10dp"
                     android:layout_height="wrap_content">
                     <EditText
                         android:id="@+id/ed_countryCode_mob"
                         android:layout_width="80dp"
                         android:paddingBottom="8dp"
                         android:paddingLeft="5dp"
                         android:drawableRight="@drawable/right10"
                         android:layout_height="match_parent"
                         android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                         android:background="@drawable/edit_single"
                         android:hint="(+91)" />
                     <EditText
                         android:id="@+id/et_phone_num"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_marginRight="20dp"
                         android:background="@drawable/edit_single"
                         android:inputType="phone"
                         android:paddingLeft="5dp"
                         android:layout_marginLeft="10dp"
                         android:paddingBottom="8dp"
                         android:hint="Mobile Number"
                         android:gravity="left"
                         android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                 </LinearLayout>
                <TextView
                    android:id="@+id/txt_error_mob_numb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_profile_for"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="5dp"
                    android:text="Small Text"
                    android:textSize="11dp"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/ed_countryCode_con"
                        android:layout_width="80dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="5dp"
                        android:drawableRight="@drawable/right10"
                        android:layout_height="match_parent"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                        android:background="@drawable/edit_single"
                        android:hint="(+91)" />
                    <EditText
                        android:id="@+id/et_phone_con"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/edit_single"
                        android:inputType="phone"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="8dp"
                        android:hint="Contact Number"
                        android:gravity="left"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                </LinearLayout>
                <TextView
                    android:id="@+id/txt_error_con_numb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_profile_for"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="5dp"
                    android:text="Small Text"
                    android:textSize="11dp"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/ed_countryCode_parent"
                        android:layout_width="80dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="5dp"
                        android:drawableRight="@drawable/right10"
                        android:layout_height="match_parent"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                        android:background="@drawable/edit_single"
                        android:hint="(+91)" />
                    <EditText
                        android:id="@+id/et_phone_parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/edit_single"
                        android:inputType="phone"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="8dp"
                        android:hint="Parent contact details"
                        android:gravity="left"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                </LinearLayout>
                <TextView
                    android:id="@+id/txt_error_paren_numb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_profile_for"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="5dp"
                    android:text="Small Text"
                    android:textSize="11dp"
                    android:visibility="gone"
                    />

                    <EditText
                        android:id="@+id/et_convenient_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_single"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:textColorHint="@color/edit_hint"
                        android:hint="Convenient Time To Call"
                        android:inputType="textPersonName"
                        android:paddingBottom="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@color/app_orange"
                    android:text="save"
                    android:textAllCaps="true"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                    android:textColor="@color/white" />

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</LinearLayout>
    <LinearLayout
        android:id="@+id/list_drawer"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:background="#ededed"
        android:fitsSystemWindows="true"
        android:orientation="vertical">
        <!-- android:layout_gravity="right"-->

        <EditText
            android:id="@+id/et_search_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/orange_edit_single"
            android:hint="search.."
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColorHint="@color/edit_hint" />

        <ListView
            android:id="@+id/drawer_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:divider="#acbbca"
            android:dividerHeight="0.5dp"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft">

        </ListView>

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/txt_draw_error"
            android:text="No response from server"
            android:textColor="#FF0000"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>