<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_list_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gey_bck"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_green"

        android:elevation="4dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">


            <ImageView
                android:id="@+id/img_ed_back"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="right|center"
                android:layout_weight="0.3"
                android:src="@drawable/back_arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.4"
                android:gravity="center"
                android:text="Edit Profile"
                android:textSize="16dp"
                android:textColor="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:layout_weight="0.3" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="20dp"
                    android:text="Family Details"

                    android:textColor="@color/app_orange"
                    android:textSize="15dp" />

             <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_family_values"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/edit_hint"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                    <EditText
                        android:id="@+id/et_family_values"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_single"
                        android:drawableRight="@drawable/right10"
                        android:hint="Family Values"
                        android:inputType="textPersonName"
                        android:paddingBottom="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_family_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/edit_hint"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                    <EditText
                        android:id="@+id/et_family_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_single"
                        android:drawableRight="@drawable/right10"
                        android:hint="Family Type"
                        android:inputType="textPersonName"
                        android:paddingBottom="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_family_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:textColorHint="@color/edit_hint"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                    <EditText
                        android:id="@+id/et_family_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_single"
                        android:drawableRight="@drawable/right10"
                        android:hint="Family Status"
                        android:inputType="textPersonName"
                        android:paddingBottom="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_father_occ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/edit_hint"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                    <EditText
                        android:id="@+id/et_father_occ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_single"
                        android:drawableRight="@drawable/right10"
                        android:hint="Father's Occupation"
                        android:inputType="textPersonName"
                        android:paddingBottom="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_mother_occ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/edit_hint"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                    <EditText
                        android:id="@+id/et_mother_occ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_single"
                        android:drawableRight="@drawable/right10"
                        android:hint="Mother's Occupation"
                        android:inputType="textPersonName"
                        android:paddingBottom="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                </android.support.design.widget.TextInputLayout>



                <Button
                    android:id="@+id/btn_basic_det_save"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@color/app_orange"
                    android:text="save"
                    android:textAllCaps="true"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                    android:textColor="@color/white" />

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</LinearLayout>

    <LinearLayout
        android:id="@+id/list_drawer"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:background="#ededed"
        android:fitsSystemWindows="true"
        android:orientation="vertical">
        <!-- android:layout_gravity="right"-->

        <EditText
            android:id="@+id/et_search_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/orange_edit_single"
            android:hint="search.."
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColorHint="@color/edit_hint" />

        <ListView
            android:id="@+id/drawer_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:divider="#acbbca"
            android:dividerHeight="0.5dp"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft">

        </ListView>
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/txt_draw_error"
            android:text="No response from server"
            android:textColor="#FF0000"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>