<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gey_bck"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_green"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">


            <ImageView
                android:id="@+id/img_call_back"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_weight="0.3"
                android:src="@drawable/back_arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.4"
                android:gravity="center"
                android:text="Call Preference"
                android:textSize="16dp"
                android:textColor="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:layout_weight="0.3" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="20dp"
            android:text="I would like to receive calls"

            android:textColor="@color/app_orange"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:weightSum="3"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/bold_green_arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:layout_gravity="center"


                android:text="Any time" />
            <RadioButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/radio_anytime"
                android:layout_gravity="center"
                android:background="@drawable/radio_selector_orange"
                android:button="@android:color/transparent"
                android:checked="false" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:weightSum="3"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/bold_green_arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="15days" />
            <RadioButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/radio_fifteen"
                android:layout_gravity="center"
                android:background="@drawable/radio_selector_orange"
                android:button="@android:color/transparent"
                android:checked="false" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:weightSum="3"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/bold_green_arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="30days" />
            <RadioButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/radio_thirty"
                android:layout_gravity="center"
                android:background="@drawable/radio_selector_orange"
                android:button="@android:color/transparent"
                android:checked="false" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:weightSum="3"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/bold_green_arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="60days" />
            <RadioButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/radio_sixty"
                android:layout_gravity="center"
                android:background="@drawable/radio_selector_orange"
                android:button="@android:color/transparent"
                android:checked="false" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:weightSum="3"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/bold_green_arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Never" />
            <RadioButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/radio_never"
                android:layout_gravity="center"
                android:background="@drawable/radio_selector_orange"
                android:button="@android:color/transparent"
                android:checked="false" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>