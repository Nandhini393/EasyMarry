<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_list_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <!-- Your normal content view -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gey_bck"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_green"

            android:elevation="4dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">


                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center"
                    android:layout_weight="0.3"
                    android:src="@drawable/back_arrow" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.4"
                    android:gravity="center"
                    android:text="Update Account"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="left"
                    android:layout_weight="0.3" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:id="@+id/myscroll"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"

                    android:orientation="vertical"

                    android:paddingBottom="50dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="24dp"
                        android:text="Your Lifestyle details will help us to find the best matches for you"

                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Physical Attributes"
                        android:textAllCaps="true"
                        android:textColor="@color/app_orange" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_height"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/right10"
                            android:hint="Height*"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:id="@+id/txt_error_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/input_layout_profile_for"
                        android:layout_gravity="right"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Small Text"
                        android:visibility="gone"
                        android:textSize="11dp"
                        />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/right10"
                            android:hint="Weight*"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:id="@+id/txt_error_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/input_layout_profile_for"
                        android:layout_gravity="right"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Small Text"
                        android:visibility="gone"
                        android:textSize="11dp"
                        />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_phy_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_phy_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/right10"
                            android:hint="Physical Status*"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:id="@+id/txt_error_phy_stat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/input_layout_profile_for"
                        android:layout_gravity="right"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Small Text"
                        android:visibility="gone"
                        android:textSize="11dp"
                        />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_complextion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_complextion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/right10"
                            android:hint="Complextion*"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:id="@+id/txt_error_complex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/input_layout_profile_for"
                        android:layout_gravity="right"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Small Text"
                        android:visibility="gone"
                        android:textSize="11dp"
                        />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_body_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_body_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/right10"
                            android:hint="Body Type*"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:id="@+id/txt_error_body_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/input_layout_profile_for"
                        android:layout_gravity="right"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Small Text"
                        android:visibility="gone"
                        android:textSize="11dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="30dp"
                        android:text="Family Details"
                        android:textAllCaps="true"
                        android:textColor="@color/app_orange" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_fam_val"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_fam_val"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/right10"
                            android:hint="Family Values"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:id="@+id/txt_error_fam_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/input_layout_profile_for"
                        android:layout_gravity="right"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Small Text"
                        android:visibility="gone"
                        android:textSize="11dp"
                        />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_fam_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_fam_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/right10"
                            android:hint="Family Type"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:id="@+id/txt_error_fam_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/input_layout_profile_for"
                        android:layout_gravity="right"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Small Text"
                        android:visibility="gone"
                        android:textSize="11dp"
                        />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_fam_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_fam_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/right10"
                            android:hint="Family Status"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:id="@+id/txt_error_fam_stat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/input_layout_profile_for"
                        android:layout_gravity="right"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Small Text"
                        android:visibility="gone"
                        android:textSize="11dp"
                        />
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_father_occ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_father_occ"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/right10"
                            android:hint="Father's Occupation"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:id="@+id/txt_error_father_occup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/input_layout_profile_for"
                        android:layout_gravity="right"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Small Text"
                        android:visibility="gone"
                        android:textSize="11dp"
                        />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_mother_occ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/edit_hint"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <EditText
                            android:id="@+id/et_mother_occ"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_single"
                            android:drawableRight="@drawable/right10"
                            android:hint="Mother's Occupation"
                            android:inputType="textPersonName"
                            android:paddingBottom="8dp"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:id="@+id/txt_error_mother_occup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/input_layout_profile_for"
                        android:layout_gravity="right"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Small Text"
                        android:visibility="gone"
                        android:textSize="11dp"
                        />
                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@color/app_orange"
                        android:text="next"
                        android:textAllCaps="true"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"

                        android:textColor="@color/white" />

                </LinearLayout>
            </RelativeLayout>

        </ScrollView>
    </LinearLayout>

    <!-- Your drawer view. This can be any view, LinearLayout
        is just an example. As we have set fitSystemWindows=true
        this will be displayed under the status bar. -->

    <LinearLayout
        android:id="@+id/list_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:background="#ededed"
        android:fitsSystemWindows="true"
        android:orientation="vertical">
        <!-- android:layout_gravity="right"-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/et_search_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/orange_edit_single"
                android:hint="Search"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColorHint="@color/edit_hint"
                android:textCursorDrawable="@drawable/cursor_color" />

            <ImageView
                android:id="@+id/filter_search"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/filter_search" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c0c0c0"></View>

        <ListView
            android:id="@+id/drawer_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:divider="#acbbca"
            android:dividerHeight="0.5dp"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft">

        </ListView>
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/txt_draw_error"
            android:text="No response from server"
            android:textColor="#FF0000"
            android:layout_height="match_parent" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
