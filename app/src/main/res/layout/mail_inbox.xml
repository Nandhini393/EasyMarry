<!-- The important thing to note here is the added fitSystemWindows -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_tabs_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!-- Your normal content view -->
        <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


                <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/mail_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_green"
                    android:elevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageView
                            android:id="@+id/menu"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="-25dp"
                            android:layout_weight="0.2"
                            android:gravity="left|center"
                            android:src="@drawable/menu_one" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="Mail Box"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:textColor="@color/white" />

                        <LinearLayout
                            android:id="@+id/option_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/option_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="All"
                                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                android:textColor="@color/white" />

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/arrow_doen_small" />
                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.Toolbar>


                <android.support.design.widget.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_green"
                    app:tabGravity="fill"
                    style="@style/MyCustomTabLayout"
                    app:tabIndicatorColor="@color/white"
                    app:tabMode="fixed" />
            </android.support.design.widget.AppBarLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </android.support.design.widget.CoordinatorLayout>

        <LinearLayout
            android:id="@+id/ll_option"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:background="#f9f8f6"
            android:elevation="4dp"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/txt_op_inbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:padding="6dp"
                android:text="Inbox"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#dbdbdb"></View>
            <TextView
                android:id="@+id/txt_op_sent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Sent"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#dbdbdb"></View>


            <TextView
                android:id="@+id/txt_op_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="6dp"
                android:text="New"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#dbdbdb"></View>

            <TextView
                android:id="@+id/txt_op_read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Read not replied"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#dbdbdb"></View>

            <TextView
                android:id="@+id/txt_op_accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Accepted"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#dbdbdb"></View>

            <TextView
                android:id="@+id/txt_op_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Replied"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#dbdbdb"></View>

            <TextView
                android:id="@+id/txt_op_not_int"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Not interested"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#dbdbdb"></View>

            <TextView
                android:id="@+id/txt_op_trash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Trash"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

        </LinearLayout>


    </FrameLayout>

    <!-- Your drawer view. This can be any view, LinearLayout
         is just an example. As we have set fitSystemWindows=true
         this will be displayed under the status bar. -->

    <LinearLayout
        android:id="@+id/llayslider"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#f8f8f8"
        android:weightSum="4"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_my_profile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:padding="5dp"
            android:gravity="center|left"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <com.example.easy_marry.Rounded_Imageview
                android:id="@+id/user_image"

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/my_profile_girl" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="left"
                    android:text="Roshni"
                    android:id="@+id/txt_name"
                    android:textColor="@color/app_orange"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="ME123456"
                        android:id="@+id/txt_id"
                        android:textColor="@color/app_green"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/img_edit_my_profile"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/edit_grey" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Your profile completeness"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="30%"
                    android:id="@+id/txt_level_percent"
                    android:textColor="@color/app_orange"
                    android:textSize="15dp" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/pg_profile_complete_level"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/pg_profile_complete_level"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:progressDrawable="@drawable/progress_bck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.4"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_parent_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"

                    android:background="@color/white"

                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/my_matches"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_my_matches_grey"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/my_matches_grey" />

                        <TextView
                            android:id="@+id/txt_mymatches"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:text="My Matches" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/gey_bck"></View>

                    <LinearLayout
                        android:id="@+id/mail_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/img_mail_box_grey"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/mail_box_grey" />



                        <TextView
                            android:id="@+id/txt_mailbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:text="Mail Box" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/gey_bck"></View>

                    <LinearLayout
                        android:id="@+id/daily_recom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_daily_recom_grey"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/daily_recom_grey" />



                        <TextView
                            android:id="@+id/txt_dailyrecom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/black"
                            android:text="Daily Recommendation" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/gey_bck"></View>

                    <LinearLayout
                        android:id="@+id/edit_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">



                        <ImageView
                            android:id="@+id/img_edit_profile_grey"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/edit_profile_grey" />



                        <TextView
                            android:id="@+id/txt_editprofile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/black"
                            android:text="Edit Profile" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/gey_bck"></View>

                    <LinearLayout
                        android:id="@+id/upgrade_acc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/img_upgrade_acc_grey"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/upgrade_acc_grey" />


                        <TextView
                            android:id="@+id/txt_upgrade_acc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:text="Upgrade Account" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/gey_bck"></View>

                    <LinearLayout
                        android:id="@+id/settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/img_settings_grey"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/settings_grey" />



                        <TextView
                            android:id="@+id/txt_settings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/black"
                            android:text="Settings" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/gey_bck"></View>

                    <LinearLayout
                        android:id="@+id/feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">



                        <ImageView
                            android:id="@+id/img_feedback_grey"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/feed_back_grey" />


                        <TextView
                            android:id="@+id/txt_feedback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:text="Feedback" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/gey_bck"></View>

                    <LinearLayout
                        android:id="@+id/search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">



                        <ImageView
                            android:id="@+id/img_search_grey"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/search_grey" />



                        <TextView
                            android:id="@+id/txt_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:text="Search" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/gey_bck"></View>
                    <LinearLayout
                        android:id="@+id/add_horo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/img_add_horo_grey"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/add_horo_grey" />



                        <TextView
                            android:id="@+id/txt_add_horo"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="Add Horoscope" />
                    </LinearLayout>


                    <Button
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:id="@+id/btn_rate"
                        android:background="@color/app_orange"
                        android:text="RATE OUR APP"
                        android:textColor="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/terms"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:text="copyright@2016"
                            android:gravity="center"
                            android:textSize="13dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="match_parent"
                            android:text="easy-marry.com"
                            android:gravity="center"
                            android:textColor="@color/app_orange"
                            android:textSize="13dp"
                            android:paddingLeft="5dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>


            </ScrollView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"

            android:background="@color/app_green"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/crown_whitee" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upgrade Now!!!"

                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:text="Speed up your partner search"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>