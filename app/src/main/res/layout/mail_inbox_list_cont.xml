<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="0.75">

            <ImageView
                android:id="@+id/img_user"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                 />
            <LinearLayout
                android:layout_width="90dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginTop="10dp"

                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/app_orange"
                android:layout_height="30dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/block_lock"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:text="Block"
                    android:paddingLeft="5dp"
                   android:gravity="center"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"

                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txt_user_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:gravity="left"
                    android:text="ME123456"
                    android:textColor="@color/app_orange"
                    android:textSize="13dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"

                    android:gravity="right"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center|bottom"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mark as read"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/app_green"
                            android:textSize="8dp" />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/img_mark_read"
                            android:src="@drawable/mark_read" />

                    </LinearLayout>



                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center|bottom"
                        android:src="@drawable/del" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(2days ago)"
                        android:gravity="center"
                        android:paddingTop="3dp"
                        android:layout_alignParentRight="true"
                        android:textSize="8dp" />
                </LinearLayout>
            </LinearLayout>

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="name"
        android:gravity="center|left"
        android:textColor="@color/app_green"
        android:textSize="13dp" />



            <TextView
                android:id="@+id/txt_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25yrs,132cms \nIndia"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="6.2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/rate_orange" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="3dp"
                        android:text="shortlisted"
                        android:textSize="8sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/chat_orange" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="chat now"
                        android:textSize="8sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/send_interest"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/app_green"
                    android:gravity="center"

                    android:orientation="horizontal"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp">


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:gravity="center"
                        android:src="@drawable/int_plus" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="Yes"
                        android:textColor="@color/white"
                        android:textSize="9sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/send_interest2"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="25dp"
                    android:background="@color/app_orange"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp">


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/int_min" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"

                        android:text="No"
                        android:textColor="@color/white"
                        android:textSize="9sp" />

                </LinearLayout>

            </LinearLayout>

<TextView
    android:layout_width="match_parent"
    android:text="Interested in her?"
    android:layout_marginTop="10dp"
    android:gravity="right"
    android:layout_marginRight="30dp"
   android:textSize="10dp"
    android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/gey_bck">

    </View>
</LinearLayout>