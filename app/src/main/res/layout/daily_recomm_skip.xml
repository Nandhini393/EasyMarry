<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/gey_bck">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_green"

        android:elevation="4dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">


            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_weight="0.3"
                android:id="@+id/menu"
                android:src="@drawable/back_arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.4"
                android:gravity="center"
                android:text="Daily Recommendation"
                android:textSize="16dp"
                android:textColor="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:layout_weight="0.3" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <!-- <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_margin="10dp"
         android:background="@color/white"
         android:orientation="vertical">

             <android.support.v7.widget.RecyclerView
                 android:id="@+id/tab_one_list"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:scrollbars="vertical" />


     </LinearLayout>-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:gravity="center"
            android:id="@+id/txt_dspan"
            android:layout_marginTop="30dp"
            android:text="View your next set of Daily Recommendation In:"
            android:textSize="14dp"
             />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center">

            <ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:indeterminateDrawable="@drawable/clockwise"
                android:progress="0"

                android:progressDrawable="@drawable/progressbar" />


           <!-- <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginBottom="60dp"
                android:background="@drawable/fill_small_orange" />

-->

            <LinearLayout

                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_marginTop="50dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="MM"
                    android:layout_marginLeft="14dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:typeface="serif" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:gravity="center"
                    android:text="11:16"
                    android:id="@+id/tvTimeCount"
                    android:textColor="@color/app_orange"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:typeface="serif" />


            </LinearLayout>

        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:text="Check out more matching profiles."
            android:textSize="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/ll_matching"
            android:layout_marginLeft="60dp"
            android:background="@drawable/black_outline_green_border"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="13dp"
                android:textAllCaps="true"
                android:text="go to matching profiles"
android:padding="10dp"
                android:gravity="center"

                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>