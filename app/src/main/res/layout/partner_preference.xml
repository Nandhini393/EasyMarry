<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_list_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <!-- Your normal content view -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gey_bck"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_green"

        android:elevation="4dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">


            <ImageView
                android:id="@+id/img_back"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="right|center"
                android:layout_weight="0.3"
                android:src="@drawable/back_arrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.4"
                android:gravity="center"
                android:text="Partner preference"
android:textSize="16dp"
                android:textColor="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:layout_weight="0.3" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text="Basic preference"
                    android:textColor="@color/app_orange"
                    android:textSize="15dp" />

               <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_groom_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:textColorHint="@color/edit_hint"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">


                    <EditText
                        android:id="@+id/et_groom_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_single"
                        android:drawableRight="@drawable/right10"
                        android:hint="Groom's age"
                        android:text="25yrs"
                        android:inputType="textPersonName"
                        android:paddingBottom="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:textColorHint="@color/edit_hint"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                    <EditText
                        android:id="@+id/et_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_single"
                        android:drawableRight="@drawable/right10"
                        android:hint="Height"
                        android:text="155cms"
                        android:inputType="textPersonName"
                        android:paddingBottom="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:textColorHint="@color/edit_hint"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                    <EditText
                        android:id="@+id/et_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_single"
                        android:drawableRight="@drawable/right10"
                        android:hint="Weight"
                        android:text="50kgs"
                        android:inputType="textPersonName"
                        android:paddingBottom="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_martialstat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:textColorHint="@color/edit_hint"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                    <EditText
                        android:id="@+id/et_martialstatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_single"
                        android:drawableRight="@drawable/right10"
                        android:hint="Marital status"
                        android:text="Single"
                        android:inputType="textPersonName"
                        android:paddingBottom="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_mother_tongue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:textColorHint="@color/edit_hint"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                    <EditText
                        android:id="@+id/et_mothertongue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_single"
                        android:drawableRight="@drawable/right10"
                        android:hint="Mother tongue"
                        android:text="Tamil"
                        android:inputType="textPersonName"
                        android:paddingBottom="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Physical status"
                    android:textColor="@color/edit_hint" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <RadioButton
                                    android:id="@+id/radio_normal"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/radio_selector"
                                    android:button="@android:color/transparent"
                                    android:checked="true"
                                    android:drawablePadding="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:text=" Normal"
                                    android:paddingLeft="3dp"
                                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:id="@+id/radio_physic"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"

                                    android:background="@drawable/radio_selector"
                                    android:button="@android:color/transparent"
                                    android:checked="false"
                                    android:drawablePadding="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:paddingLeft="3dp"
                                    android:text=" Phiysically challenged"
                                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                                <RadioButton
                                    android:id="@+id/radio_doesnt"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"

                                    android:background="@drawable/radio_selector"
                                    android:button="@android:color/transparent"
                                    android:checked="false"
                                    android:drawablePadding="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:paddingLeft="3dp"
                                    android:text=" Doesn't matter"
                                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                                    />
                            </LinearLayout>
                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_body_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:textColorHint="@color/edit_hint"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                    <EditText
                        android:id="@+id/et_body_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_single"
                        android:drawableRight="@drawable/right10"
                        android:hint="Body type"
                        android:text="Good"
                        android:inputType="textPersonName"
                        android:paddingBottom="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_profile_created"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:textColorHint="@color/edit_hint"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                    <EditText
                        android:id="@+id/et_profile_created"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_single"
                        android:drawableRight="@drawable/right10"
                        android:hint="Profile created by"
                        android:text="Self"
                        android:inputType="textPersonName"
                        android:paddingBottom="8dp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Eating habits"
                    android:textColor="@color/edit_hint" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <RadioButton
android:id="@+id/radio_eat_all"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:checked="true"
                android:drawablePadding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:text="All" />
</LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radio_eat_non_veg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:checked="false"
                android:drawablePadding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="Non-Vegetarian" />
            </LinearLayout>
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/radio_eat_veg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/radio_selector"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:drawablePadding="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:text="Vegetarian" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/radio_eat_egg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/radio_selector"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:drawablePadding="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="Eggetarian" />
            </LinearLayout>
        </RadioGroup>

    </LinearLayout>
</LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Drinking habits"
                    android:textColor="@color/edit_hint" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_drink_yes"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/radio_selector"
                            android:button="@android:color/transparent"
                            android:checked="true"
                            android:drawablePadding="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="Yes" />



                        <RadioButton
                            android:id="@+id/radio_drink_no"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/radio_selector"
                            android:button="@android:color/transparent"
                            android:checked="false"
                            android:drawablePadding="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="No" />

                        <RadioButton
                            android:id="@+id/radio_drink_social"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/radio_selector"
                            android:button="@android:color/transparent"
                            android:checked="false"
                            android:drawablePadding="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="Social" />
                    </RadioGroup>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Smoking habits"
                    android:textColor="@color/edit_hint" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_smoke_yes"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/radio_selector"
                            android:button="@android:color/transparent"
                            android:checked="true"
                            android:drawablePadding="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="Yes" />



                        <RadioButton
                            android:id="@+id/radio_smoke_no"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/radio_selector"
                            android:button="@android:color/transparent"
                            android:checked="false"
                            android:drawablePadding="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="No" />

                        <RadioButton
                            android:id="@+id/radio_smoke_social"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/radio_selector"
                            android:button="@android:color/transparent"
                            android:checked="false"
                            android:drawablePadding="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="Social" />
                    </RadioGroup>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_partner_det_save"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@color/app_orange"
                    android:text="submit"
                    android:textAllCaps="true"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                    android:textColor="@color/white" />

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</LinearLayout>
    <LinearLayout
        android:id="@+id/list_drawer"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_gravity="right"
        android:background="#ededed"
        android:fitsSystemWindows="true"
        android:orientation="vertical">
        <!-- android:layout_gravity="right"-->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/orange_edit_single"
            android:hint="search.."
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:id="@+id/et_search_profile"
            android:textColorHint="@color/edit_hint" />

        <ListView
            android:id="@+id/drawer_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:divider="#acbbca"
            android:dividerHeight="0.5dp"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft">

        </ListView>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>